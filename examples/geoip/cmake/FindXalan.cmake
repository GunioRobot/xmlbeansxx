if (WIN32)
  if (CMAKE_BUILD_TYPE STREQUAL Debug) 
    set(LIB_SUF "_1D")
  else (CMAKE_BUILD_TYPE STREQUAL Debug)
    set(LIB_SUF "_1")
  endif (CMAKE_BUILD_TYPE STREQUAL Debug) 
else (WIN32) 
  set(LIB_SUF "")
endif (WIN32)

FIND_PATH(XALAN_INCLUDE_DIR xalanc/Include/PlatformDefinitions.hpp /usr/include /usr/local/include)
FIND_LIBRARY(XALAN_LIBRARY NAMES xalan-c${LIB_SUF} PATHS /usr/lib /usr/local/lib) 

IF (XALAN_INCLUDE_DIR AND XALAN_LIBRARY)
   SET(XALAN_FOUND TRUE)
ENDIF (XALAN_INCLUDE_DIR AND XALAN_LIBRARY)

IF (XALAN_FOUND)
   IF (NOT Xalan_FIND_QUIETLY)
      MESSAGE(STATUS "Found XALAN: ${XALAN_LIBRARY}")
   ENDIF (NOT Xalan_FIND_QUIETLY)
ELSE (XALAN_FOUND)
   IF (Xalan_FIND_REQUIRED)
      MESSAGE(FATAL_ERROR "Could not find Xalan")
   ENDIF (Xalan_FIND_REQUIRED)
ENDIF (XALAN_FOUND)
